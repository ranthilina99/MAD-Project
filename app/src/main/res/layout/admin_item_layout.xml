<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginRight="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/atw_border_image"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        >


        <TextView

            android:id="@+id/item_name_adm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Product name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22dp"
            android:textStyle="bold"

            />





        <ImageView
            android:id="@+id/item_image_adm"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/item_name_adm"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/item_brand_adm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Brand"
            android:textAlignment="center"
            android:layout_below="@+id/item_image_adm"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"

            android:textColor="@color/colorPrimary"

            />


        <TextView
            android:id="@+id/item_price_adm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product price"
            android:textAlignment="center"
            android:layout_below="@+id/item_brand_adm"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"

            android:textColor="@color/colorRed"

            />

        <TextView
            android:id="@+id/item_description_adm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Discription"
            android:textAlignment="center"
            android:layout_below="@+id/item_price_adm"
            android:textSize="14dp"

            android:textColor="@color/colorPrimary"

            />
        <TextView
            android:id="@+id/item_status_adm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    "
            android:textAlignment="center"
            android:layout_marginStart="230dp"

            android:layout_below="@id/item_description_adm"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"

            android:textColor="#C31B0F"

            />

        <LinearLayout
            android:id="@+id/liq1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_status_adm"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView

                android:id="@+id/item_pet_adm"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Pet type"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"

                android:textStyle="bold"

                />

            <TextView

                android:id="@+id/item_itemT_adm"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Item type"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="5dp"

                android:textStyle="bold"

                />
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>